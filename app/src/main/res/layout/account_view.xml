<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/accountcoordinate"
    android:background="@color/white"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/holobright"
        android:gravity="bottom"
        android:id="@+id/login"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <ImageView
            android:id="@+id/accountimageview"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/ic_account_circle_white_48dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/accountimageview"
            android:text="Welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:paddingTop="10dp"
            android:layout_below="@+id/textView2"
            android:text="Login/Sign Up" />

       </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            >

          <ListView
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:id="@+id/listviewacc"
              android:background="@color/white"
              android:dividerHeight="1.0sp"/>
        </RelativeLayout>

</RelativeLayout>