<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/holobright"
        android:gravity="bottom"
        android:id="@+id/login2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <ImageView
            android:id="@+id/accountimageview2"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            app:srcCompat="@drawable/ic_account_circle_white_48dp"
            android:layout_margin="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/emailll"
            android:layout_alignParentStart="true"
            android:text="Welcome!"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/emailll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Log in/Sign up"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/name2"
            android:layout_marginBottom="13dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        >

        <ScrollView
            android:id="@+id/scrollViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <ListView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/listvieww"
                    android:background="@color/white"
                    android:dividerHeight="1.0sp"/>
               <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#D3D3D3" />


                <TextView
                    android:id="@+id/quickhw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listvieww"
                    android:layout_marginLeft="15dp"
                     android:textSize="15dp"
                    />


                <ListView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/secondlistw"
                    android:layout_below="@+id/quickhw"
                    android:background="@color/white"
                    android:dividerHeight="1.0sp"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>